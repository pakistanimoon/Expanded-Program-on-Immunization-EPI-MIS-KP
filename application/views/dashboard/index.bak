<script type="text/javascript">
$(document).on('change','#dashyear',function(){
	$('#showForms').html('');
	var year=$(this).val();
	var data = {year:year,ajax:true};
	if(year!=0){
		$.ajax({
			type: "POST",
			data:data,
			async:true,
			dataType : 'json',
			url: "<?php echo base_url(); ?>dashboard/Main_page/index",
			success: function(result){
				$('#indicator').html(result.cards);
			}
		});
	}
});
</script>